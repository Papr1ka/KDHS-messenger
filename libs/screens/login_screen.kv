#:kivy 2.1.0

<LoginScreen>:
    name: "login_screen"
    MDFloatLayout:
        size_hint: 0.5, 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDLabel:
            text: "Login"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            halign: "center"
            font_size: "40sp"
            theme_text_color: "Custom"
            text_color: 0.25, 0.16, 0.44, 1
        MDFloatLayout:
            size_hint: 0.85, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.38}
            canvas:
                Color:
                    rgba: (0.9, 0.9, 0.9, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                hint_text: "Email"
                size_hint: 1, None
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                height: self.minimum_height
                multiline: False
                cursor_color: 0.46, 0.38, 0.86, 1
                cursor_width: "2sp"
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0, 0, 0, 0
                padding: 15

<CommonComponentLabel>:
    halign: "center"


<MobileView>:
    MDFloatLayout:
        MDLabel:
            text: "Login"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            halign: "center"
            font_size: "40sp"
            theme_text_color: "Custom"
            text_color: 0.25, 0.16, 0.44, 1
        TextInputRound:
            hint_text: 'username'
            back_color: (0.9, 0.9, 0.9, 1)
            text_color: (96/255, 74/255, 215/255, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.38}
        TextInputRound:
            hint_text: 'password'
            back_color: (0.9, 0.9, 0.9, 1)
            text_color: (96/255, 74/255, 215/255, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.28}
        MDFillRoundFlatButton:
            text: 'Sign in'
            size_hint: 0.85, 0.06
            pos_hint: {"center_x": 0.5, "center_y": 0.16}



<TabletView>:
    CommonComponentLabel:
        text: "Table"


<DesktopView>:
    CommonComponentLabel:
        text: "Desktop"