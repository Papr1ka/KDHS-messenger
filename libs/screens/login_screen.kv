#:kivy 2.1.0
#:set font "Nunito"

<LoginScreen>:
    name: "login_screen"


<Background@MDFloatLayout>:
    md_bg_color: app.colors['AccentColor']


<LoginScreenBase@MDFloatLayout>:
    MDLabel:
        font_name: font
        id: error
        pos_hint: {"center_x": 0.5, "center_y": 0.22}
        halign: "center"
        font_size: "16sp"
        theme_text_color: "Custom"
        text_color: app.colors['ErrorColor']
    MDLabel:
        font_name: font
        text: "Вход"
        pos_hint: {"center_x": 0.5, "center_y": 0.52}
        halign: "center"
        font_size: "40sp"
        theme_text_color: "Custom"
        text_color: app.colors['MainColor']
    TextInputRoundIcon:
        hint_text: 'username'
        back_color: (0.9, 0.9, 0.9, 1)
        text_color: app.colors['ThirdAccentColor']
        pos_hint: {"center_x": 0.5, "center_y": 0.40}
        icon_source: 'assets/icons/user.png'
    TextInputRoundIcon:
        hint_text: 'password'
        back_color: (0.9, 0.9, 0.9, 1)
        text_color: app.colors['ThirdAccentColor']
        pos_hint: {"center_x": 0.5, "center_y": 0.30}
        icon_source: 'assets/icons/key.png'
    MDFillRoundFlatButton:
        font_name: font
        text: 'Войти'
        size_hint: 0.85, 0.06
        pos_hint: {"center_x": 0.5, "center_y": 0.16}
        font_size: '16sp'
        on_press: root.login()
    MDTextButton:
        font_name: font
        font_size: '16sp'
        text: 'Нет аккаунта?'
        color: app.colors['MainColor']
        halign: 'center'
        pos_hint: {'center_x': 0.5, "center_y": 0.09}
        on_release: app.screen_manager.switch_screen('register_screen')


<LoginMobileView>:
    Background:
        LoginScreenBase:


<LoginTabletView>:
    Background:
        MDFloatLayout:
            size_hint: None, None
            size: dp(400), dp(500)
            pos_hint: {'center_x': 0.5, "center_y": 0.5}
            LoginScreenBase:
                pos_hint: {'center_x': 0.5, "center_y": 0.5}


<LoginDesktopView>:
    Background:
        MDFloatLayout:
            size_hint: None, None
            size: dp(400), dp(500)
            pos_hint: {'center_x': 0.5, "center_y": 0.5}
            LoginScreenBase:
                pos_hint: {'center_x': 0.5, "center_y": 0.5}
