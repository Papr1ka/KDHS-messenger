#:kivy 2.1.0

<LoginScreen>:
    name: "login_screen"
    MDCard:
        radius: (16, 16, 16, 16)
        id: error_widget
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: "vertical"
        MDTextField:
            id: username
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            foreground_color: (0.95, 0.95, 0.95, 1)
        
        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
            foreground_color: (0.95, 0.95, 0.95, 1)
        
        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
        
        MDRoundFlatButton:
            text: "REGISTER"
            font_size: 12
            pos_hint: {"center_x": 0.5}
