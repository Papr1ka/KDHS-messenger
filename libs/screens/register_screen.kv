#:kivy 2.1.0

<RegisterScreen>:
    name: "register_screen"

<RegisterScreenBase@MDFloatLayout>:
    MDLabel:
        id: error
        pos_hint: {"center_x": 0.5, "center_y": 0.22}
        halign: "center"
        font_size: "16sp"
        theme_text_color: "Custom"
        text_color: app.colors['ErrorColor']
    MDLabel:
        text: "Регистрация"
        pos_hint: {"center_x": 0.5, "center_y": 0.62}
        halign: "center"
        font_size: "40sp"
        theme_text_color: "Custom"
        text_color: app.colors['MainColor']
    TextInputRoundIcon:
        hint_text: 'username'
        back_color: (0.9, 0.9, 0.9, 1)
        text_color: app.colors['ThirdAccentColor']
        pos_hint: {"center_x": 0.5, "center_y": 0.50}
        icon_source: 'assets/icons/user.png'
    TextInputRoundIcon:
        hint_text: 'password'
        back_color: (0.9, 0.9, 0.9, 1)
        text_color: app.colors['ThirdAccentColor']
        pos_hint: {"center_x": 0.5, "center_y": 0.40}
        icon_source: 'assets/icons/key.png'
    TextInputRoundIcon:
        hint_text: 'password x2'
        back_color: (0.9, 0.9, 0.9, 1)
        text_color: app.colors['ThirdAccentColor']
        pos_hint: {"center_x": 0.5, "center_y": 0.30}
        icon_source: 'assets/icons/key.png'
    MDFillRoundFlatButton:
        text: 'Зарегистрироваться'
        size_hint: 0.85, 0.06
        pos_hint: {"center_x": 0.5, "center_y": 0.16}
        font_size: '16sp'
        on_press: root.register()
    MDTextButton:
        font_size: '16sp'
        text: 'Есть аккаунт?'
        color: app.colors['MainColor']
        halign: 'center'
        pos_hint: {'center_x': 0.5, "center_y": 0.09}
        on_release: app.screen_manager.switch_screen('login_screen')


<MobileView>:
    Background:
        RegisterScreenBase:


<TabletView>:
    Background:
        MDFloatLayout:
            size_hint: None, None
            size: dp(400), dp(500)
            pos_hint: {'center_x': 0.5, "center_y": 0.5}
            RegisterScreenBase:
                pos_hint: {'center_x': 0.5, "center_y": 0.5}


<DesktopView>:
    Background:
        MDFloatLayout:
            size_hint: None, None
            size: dp(400), dp(500)
            pos_hint: {'center_x': 0.5, "center_y": 0.5}
            RegisterScreenBase:
                pos_hint: {'center_x': 0.5, "center_y": 0.5}
