#:kivy 2.1.0

<SettingsChatScreen>:
    name: 'settings_chat_screen'
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: app.current_destination_username
            left_action_items: [["arrow-left", lambda x: app.screen_manager.switch_screen('settings_screen')]]
            md_bg_color: app.colors['SecondColor']
            text_color: app.colors['MainColor']
        MDCard:
            size_hint: None, None
            width: min(root.width, dp(500))
            height: dp(80)
            pos_hint: {'center_x': 0.5}
            orientation: 'vertical'
            Widget:
                size_hint_y: None
                height: dp(40)
            MDCard:
                size_hint_y: None
                height: sum([i.height for i in self.children])
                SettingsItem:
                    id: font_item
                    text: 'Размер шрифта'
                    secondary_text: str(app.font_size)
        Widget:
            id: asscloser
